var day;
switch (new Date().getDay()) {
  case 0:
  day = "Sunday, Boo, no training!";
  break;
  case 1:
  day = "Monday, Boo, no training!";
  case 2:
  day = "Tuesday, hurray its trainig day!";
  break;
  case 3:
  day = "Wednesday, hurray its training day!";
  break;
  case 4:
  day = "Thursday, Boo, its no training!";
  break;
  case 5:
  day = "Friday, Boo, its no taining day!";
  break;
  case 6:
  day = "Saturday, hurray its game day";

}
document.getElementById("demo").innerHTML = "Today is " + day;
</script>

